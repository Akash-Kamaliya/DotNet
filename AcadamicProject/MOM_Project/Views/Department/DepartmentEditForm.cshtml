<div class="container pb-3">
    <h2 class="h2 fw-bold">Edit Department</h2>
</div>

<div class="card shadow rounded-4 overflow-hidden">
    <div class="table-head d-flex align-items-center px-3 py-2 bg-p rimary text-white">
        <div class="h5 mb-0">Department Edit Form</div>
    </div>

    <div class="card-body">

        <form class="needs-validation" novalidate method="post">

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Department ID</label>
                    <input type="text" class="form-control is-valid" value="3" readonly>
                    <div class="valid-feedback">Auto-generated</div>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Last Modified</label>
                    <input type="text" class="form-control is-valid" value="09-11-2001" readonly>
                    <div class="valid-feedback">Read only</div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-12">
                    <label class="form-label">Department Name</label>
                    <input type="text" class="form-control is-invalid" value="IT Department" required>
                    <div class="invalid-feedback">
                        Department name is required.
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Update
                </button>
                <a asp-action="DepartmentList" class="btn btn-secondary">
                    Cancel
                </a>
            </div>

        </form>

    </div>
</div>
