<h2 class="h2 fw-bold">Edit Staff</h2>

<div class="card shadow rounded-4 overflow-hidden">
    <div class="table-head d-flex align-items-center px-3 py-2 bg-primary text-white">
        <div class="h5">Edit Staff</div>
    </div>

    <div class="card-body">
        <form>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Staff ID</label>
                    <input class="form-control" value="3" readonly />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Staff Name</label>
                    <input class="form-control" value="Raju Patel" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Department ID</label>
                    <input class="form-control" value="1" />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Mobile No</label>
                    <input class="form-control" value="9876543210" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Email Address</label>
                    <input class="form-control" value="raju@email.com" />
                </div>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Update
                </button>
                <a asp-action="StaffList" class="btn btn-secondary">
                    Cancel
                </a>
            </div>

        </form>
    </div>
</div>