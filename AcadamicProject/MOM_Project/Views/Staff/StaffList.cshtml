<div class="container pb-3">
    <h2 class="h2 fw-bold">Staff</h2>
    <div class="d-flex justify-content-end">
        <a class="btn btn-primary" asp-action="StaffAdd">
            <i class="bi bi-plus"></i> Add Staff
        </a>
    </div>
</div>

<div class="shadow rounded-4 overflow-hidden">
    <div class="table-head px-3 py-2 bg-primary text-white">
        <div class="h5">Staff Table</div>
    </div>

    <table class="table mb-0">
        <thead>
            <tr>
                <th>StaffID</th>
                <th>StaffName</th>
                <th>DepartmentID</th>
                <th>MobileNo</th>
                <th>EmailAddress</th>
                <th>Created</th>
                <th colspan="3">Action</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 1; i <= 10; i++)
            {
                <tr>
                    <th>@i</th>
                    <td>Staff Member @i</td>
                    <td>@(i % 3 + 1)</td>
                    <td>99999999@i</td>
                    <td>staff@i@email.com</td>
                    <td>09-11-2001</td>
                    <td><a asp-action="StaffView"><i class="bi bi-eye"></i></a></td>
                    <td><a asp-action="StaffEditForm"><i class="bi bi-pen"></i></a></td>
                    <td><a asp-action="StaffDeleteForm"><i class="bi bi-trash text-danger"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
