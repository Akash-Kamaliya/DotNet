@{
    var staffList = new[]
    {
        new { StaffName = "Mark Johnson", DepartmentName = "HR" },
        new { StaffName = "Jacob Smith", DepartmentName = "IT" },
        new { StaffName = "John Williams", DepartmentName = "Finance" },
        new { StaffName = "Akash Kamaliya", DepartmentName = "CSE" },
        new { StaffName = "Raju Patel", DepartmentName = "Admin" }
    };
}

<div class="container pb-3">
    <h2 class="h2 fw-bold">Staff</h2>
    <div class="d-flex justify-content-end">
        <a class="btn btn-primary" asp-action="StaffAdd">
            <i class="bi bi-plus"></i> Add Staff
        </a>
    </div>
</div>

<div class="shadow rounded-4 overflow-hidden">
    <div class="bg-primary text-white px-3 py-2 h5 mb-0">
        Staff List
    </div>

    <table class="table mb-0">
        <thead>
            <tr>
                <th>Staff Name</th>
                <th>Department</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var staff in staffList)
            {
                <tr>
                    <td>@staff.StaffName</td>
                    <td>@staff.DepartmentName</td>
                    <td class="text-center">
                        <div class="action-icons">
                            <a asp-action="StaffView"><i class="bi bi-eye"></i></a>
                            <a asp-action="StaffEditForm"><i class="bi bi-pen"></i></a>
                            <a asp-action="StaffDeleteForm"><i class="bi bi-trash text-danger"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
