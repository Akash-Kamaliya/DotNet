<h2 class="h2 fw-bold">Add Staff</h2>

<div class="card shadow rounded-4 overflow-hidden">
    <div class="table-head d-flex align-items-center px-3 py-2 bg-primary text-white">
        <div class="h5">Add Staff</div>
    </div>
    <div class="card-body">
        <form>
            <div class="mb-3">
                <label class="form-label">Staff Name</label>
                <input class="form-control mb-3" placeholder="Staff Name" />
            </div>

            <div class="mb-3">
                <label class="form-label">Department ID</label>
                <input class="form-control mb-3" placeholder="Department ID" />
            </div>

            <div class="mb-3">
                <label class="form-label">Mobile No</label>
                <input class="form-control mb-3" placeholder="Mobile No" />
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input class="form-control mb-3" placeholder="Email" />
            </div>

            <div class="text-end">
                <a asp-action="StaffList" class="btn btn-secondary">Cancel</a>
                <button class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
