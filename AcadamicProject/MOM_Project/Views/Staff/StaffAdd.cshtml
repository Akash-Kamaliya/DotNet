<h2 class="h2 fw-bold">Add Staff</h2>

<div class="card shadow rounded-4 overflow-hidden">
    <div class="table-head d-flex align-items-center px-3 py-2 bg-primary text-white">
        <div class="h5">Add Staff</div>
    </div>

    <div class="card-body">
        <form>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Staff Name</label>
                    <input class="form-control" placeholder="Staff Name" />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Department ID</label>
                    <input class="form-control" placeholder="Department ID" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Mobile No</label>
                    <input class="form-control" placeholder="Mobile No" />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Email</label>
                    <input class="form-control" placeholder="Email" />
                </div>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary">Save</button>
                <a asp-action="StaffList" class="btn btn-secondary">Cancel</a>
            </div>

        </form>
    </div>
</div>
