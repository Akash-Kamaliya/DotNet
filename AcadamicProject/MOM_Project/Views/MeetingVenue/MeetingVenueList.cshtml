@{
    var venues = new List<string>
    {
        "Conference Room A",
        "Conference Room B",
        "Seminar Hall",
        "Board Room",
        "Online - Google Meet"
    };
}

<div class="container pb-3">
    <h2 class="h2 fw-bold">Meeting Venue</h2>
    <div class="d-flex justify-content-end">
        <a class="btn btn-primary" asp-action="MeetingVenueAdd">
            <i class="bi bi-plus"></i> Add Venue
        </a>
    </div>
</div>

<div class="shadow rounded-4 overflow-hidden">
    <div class="bg-primary text-white px-3 py-2 h5 mb-0">
        Meeting Venue List
    </div>

    <table class="table mb-0">
        <thead>
            <tr>
                <th>Venue Name</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var venue in venues)
            {
                <tr>
                    <td>@venue</td>
                    <td class="text-center">
                        <div class="action-icons">
                            <a asp-action="MeetingVenueView"><i class="bi bi-eye"></i></a>
                            <a asp-action="MeetingVenueEditForm"><i class="bi bi-pen"></i></a>
                            <a asp-action="MeetingVenueDeleteForm"><i class="bi bi-trash text-danger"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
