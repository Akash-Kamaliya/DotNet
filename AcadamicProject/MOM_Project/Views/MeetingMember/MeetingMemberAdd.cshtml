<h2 class="h2 fw-bold">Add Meeting Member</h2>

<div class="card shadow rounded-4 overflow-hidden">
    <div class="table-head d-flex align-items-center px-3 py-2 bg-primary text-white">
        <div class="h5">Add Meeting Member</div>    
    </div>
    <div class="card-body">
        <form>
            <div class="mb-3">
                <label class="form-label">Meeting Id</label>
                <input class="form-control mb-3" placeholder="Meeting ID" />
            </div>
            <div class="mb-3">
                <label class="form-label">Staff Id</label>
                <input class="form-control mb-3" placeholder="Staff ID" />
            </div>
            <div class="mb-3">
                <label class="form-label">Staff Status</label>
                <select class="form-control mb-3">
                    <option>Present</option>
                    <option>Absent</option>
                </select>
            </div>
            <div class="text-end">
                <a asp-action="MeetingMemberList" class="btn btn-secondary">Cancel</a>
                <button class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
