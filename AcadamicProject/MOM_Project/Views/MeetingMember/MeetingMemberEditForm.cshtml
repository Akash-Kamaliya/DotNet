<div class="container pb-3">
    <h2 class="h2 fw-bold">Edit Meeting Member</h2>
</div>

<div class="card shadow rounded-4 overflow-hidden">
    <div class="table-head d-flex align-items-center px-3 py-2 bg-primary text-white">
        <div class="h5">Edit Meeting Member</div>
    </div>
    <div class="card-body">

        <form method="post">

            <div class="mb-3">
                <label class="form-label">Meeting Member ID</label>
                <input type="text" class="form-control" value="7" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Meeting ID</label>
                <input type="text" class="form-control" value="5" />
            </div>

            <div class="mb-3">
                <label class="form-label">Staff ID</label>
                <input type="text" class="form-control" value="3" />
            </div>

            <div class="mb-3">
                <label class="form-label">Attendance</label>
                <select class="form-select">
                    <option selected>Present</option>
                    <option>Absent</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Remarks</label>
                <textarea class="form-control" rows="3">Attended full meeting</textarea>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="MeetingMemberList" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Update
                </button>
            </div>

        </form>

    </div>
</div>
