@{
    var members = new[]
    {
        new {
            MeetingTitle = "Planning Meeting",
            StaffName = "Akash Kamaliya",
            DepartmentName = "CSE",
            Status = "Present"
        },
        new {
            MeetingTitle = "Review Meeting",
            StaffName = "John Williams",
            DepartmentName = "IT",
            Status = "Absent"
        }
    };
}

<div class="container pb-3">
    <h2 class="h2 fw-bold">Meeting Members</h2>
    <div class="d-flex justify-content-end">
        <a class="btn btn-primary" asp-action="MeetingMemberAdd">
            <i class="bi bi-plus"></i> Add Member
        </a>
    </div>
</div>

<div class="shadow rounded-4 overflow-hidden">
    <div class="bg-primary text-white px-3 py-2 h5 mb-0">
        Meeting Members List
    </div>

    <table class="table mb-0">
        <thead>
            <tr>
                <th>Meeting</th>
                <th>Staff</th>
                <th>Department</th>
                <th>Status</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mm in members)
            {
                <tr>
                    <td>@mm.MeetingTitle</td>
                    <td>@mm.StaffName</td>
                    <td>@mm.DepartmentName</td>
                    <td>@mm.Status</td>
                    <td class="text-center">
                        <div class="action-icons">
                            <a asp-action="MeetingMemberView"><i class="bi bi-eye"></i></a>
                            <a asp-action="MeetingMemberEditForm"><i class="bi bi-pen"></i></a>
                            <a asp-action="MeetingMemberDeleteForm"><i class="bi bi-trash text-danger"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
