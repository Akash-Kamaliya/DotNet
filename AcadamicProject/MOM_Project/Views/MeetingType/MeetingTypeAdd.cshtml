<div class="container pb-3">
    <h2 class="h2 fw-bold">Add Meeting Type</h2>
</div>

<div class="card shadow rounded-4 overflow-hidden">
    <div class="table-head d-flex align-items-center px-3 py-2 bg-primary text-white">
        <div class="h5">Add Meeting Type</div>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Meeting Type Name</label>
                <input class="form-control" placeholder="Enter Meeting Type" />
            </div>

            <div class="mb-3">
                <label class="form-label">Remarks</label>
                <input class="form-control" placeholder="Remarks" />
            </div>

            <div class="text-end">
                <a asp-action="MeetingTypeList" class="btn btn-secondary">Cancel</a>
                <button class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
