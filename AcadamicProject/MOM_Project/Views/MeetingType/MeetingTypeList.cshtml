<div class="container pb-3">
    <h2 class="h2 fw-bold">Meeting Type</h2>
    <div class="d-flex justify-content-end">
        <a class="btn btn-primary" asp-action="MeetingTypeAdd">
            <i class="bi bi-plus"></i> Add Meeting Type
        </a>
    </div>
</div>

<div class="shadow rounded-4 overflow-hidden">
    <div class="table-head px-3 py-2 bg-primary text-white">
        <div class="h5">Meeting Type Table</div>
    </div>

    <table class="table mb-0">
        <thead>
            <tr>
                <th>MeetingTypeID</th>
                <th>MeetingTypeName</th>
                <th>Remarks</th>
                <th>Created</th>
                <th>Modified</th>
                <th colspan="3">Action</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 1; i <= 10; i++)
            {
                <tr>
                    <th>@i</th>
                    <td>Review Meeting @i</td>
                    <td>General Discussion</td>
                    <td>09-11-2001</td>
                    <td>09-11-2001</td>
                    <td><a asp-action="MeetingTypeView"><i class="bi bi-eye"></i></a></td>
                    <td><a asp-action="MeetingTypeEditForm"><i class="bi bi-pen"></i></a></td>
                    <td><a asp-action="MeetingTypeDeleteForm"><i class="bi bi-trash text-danger"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
