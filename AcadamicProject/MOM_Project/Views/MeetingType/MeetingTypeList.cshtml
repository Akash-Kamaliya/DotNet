@{
    var meetingTypes = new List<string>
    {
        "Review Meeting",
        "Planning Meeting",
        "Training Session",
        "Audit Meeting",
        "Client Discussion"
    };
}

<div class="container pb-3">
    <h2 class="h2 fw-bold">Meeting Type</h2>
    <div class="d-flex justify-content-end">
        <a class="btn btn-primary" asp-action="MeetingTypeAdd">
            <i class="bi bi-plus"></i> Add Meeting Type
        </a>
    </div>
</div>

<div class="shadow rounded-4 overflow-hidden">
    <div class="bg-primary text-white px-3 py-2 h5 mb-0">
        Meeting Type List
    </div>

    <table class="table mb-0">
        <thead>
            <tr>
                <th>Meeting Type Name</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var type in meetingTypes)
            {
                <tr>
                    <td>@type</td>
                    <td class="text-center">
                        <div class="action-icons">
                            <a asp-action="MeetingTypeView"><i class="bi bi-eye"></i></a>
                            <a asp-action="MeetingTypeEditForm"><i class="bi bi-pen"></i></a>
                            <a asp-action="MeetingTypeDeleteForm"><i class="bi bi-trash text-danger"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
