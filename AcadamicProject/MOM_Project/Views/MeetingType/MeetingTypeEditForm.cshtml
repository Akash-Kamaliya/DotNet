<h2 class="h2 fw-bold">Edit Meeting Type</h2>

<div class="card shadow rounded-4 overflow-hidden">
    <div class="table-head d-flex align-items-center px-3 py-2 bg-primary text-white">
        <div class="h5">Edit Meeting Type</div>
    </div>

    <div class="card-body">
        <form>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Meeting Type ID</label>
                    <input class="form-control" value="1" readonly />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Meeting Type Name</label>
                    <input class="form-control" value="Review Meeting" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Remark</label>
                    <input class="form-control" value="General Discussion" />
                </div>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Update
                </button>
                <a asp-action="MeetingTypeList" class="btn btn-secondary">
                    Cancel
                </a>
            </div>

        </form>
    </div>
</div>
