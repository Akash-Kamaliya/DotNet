<div class="container pb-3">
    <h2 class="h2 fw-bold">Edit Meeting</h2>
</div>

<div class="card shadow rounded-4 overflow-hidden">
    <div class="table-head d-flex align-items-center px-3 py-2 bg-primary text-white">
        <div class="h5 mb-0">Edit Meeting</div>
    </div>

    <div class="card-body">

        <form class="needs-validation" novalidate method="post">

            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Meeting ID</label>
                    <input type="text" class="form-control is-valid" value="5" readonly>
                    <div class="valid-feedback">Auto-generated</div>
                </div>

                <div class="col-md-8">
                    <label class="form-label">Meeting Date & Time</label>
                    <input type="datetime-local" class="form-control is-invalid" value="2025-12-15T10:30" required>
                    <div class="invalid-feedback">Meeting date & time is required.</div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Meeting Type ID</label>
                    <input type="text" class="form-control is-invalid" value="2" required>
                    <div class="invalid-feedback">Meeting type is required.</div>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Meeting Venue ID</label>
                    <input type="text" class="form-control is-invalid" value="3" required>
                    <div class="invalid-feedback">Meeting venue is required.</div>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Department ID</label>
                    <input type="text" class="form-control is-invalid" value="1" required>
                    <div class="invalid-feedback">Department is required.</div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-12">
                    <label class="form-label">Meeting Description</label>
                    <textarea class="form-control is-valid" rows="3" required>Quarterly review discussion</textarea>
                    <div class="valid-feedback">Looks good</div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Update
                </button>
                <a asp-action="MeetingsList" class="btn btn-secondary">
                    Cancel
                </a>
            </div>

        </form>

    </div>
</div>
