<div class="container pb-3">
    <h2 class="h2 fw-bold">Edit Meeting</h2>
</div>

<div class="card shadow rounded-4 overflow-hidden">
    <div class="table-head d-flex align-items-center px-3 py-2 bg-primary text-white">
        <div class="h5">Edit Meeting</div>
    </div>
    <div class="card-body">

        <form method="post">

            <div class="mb-3">
                <label class="form-label">Meeting ID</label>
                <input type="text" class="form-control" value="5" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Meeting Date & Time</label>
                <input type="datetime-local" class="form-control" value="2025-12-15T10:30" />
            </div>

            <div class="mb-3">
                <label class="form-label">Meeting Type ID</label>
                <input type="text" class="form-control" value="2" />
            </div>

            <div class="mb-3">
                <label class="form-label">Meeting Venue ID</label>
                <input type="text" class="form-control" value="3" />
            </div>

            <div class="mb-3">
                <label class="form-label">Department ID</label>
                <input type="text" class="form-control" value="1" />
            </div>

            <div class="mb-3">
                <label class="form-label">Meeting Description</label>
                <textarea class="form-control" rows="3">Quarterly review discussion</textarea>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="MeetingsList" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Update
                </button>
            </div>

        </form>

    </div>
</div>
