<div class="container pb-3">
    <h2 class="h2 fw-bold">Meetings</h2>
    <div class="d-flex justify-content-end">
        <a class="btn btn-primary" asp-action="MeetingsAdd">
            <i class="bi bi-plus"></i> Schedule Meeting
        </a>
    </div>
</div>

<div class="shadow rounded-4 overflow-hidden">
    <div class="table-head px-3 py-2 bg-primary text-white">
        <div class="h5">Meetings Table</div>
    </div>

    <table class="table mb-0">
        <thead>
            <tr>
                <th>MeetingID</th>
                <th>MeetingDate</th>
                <th>MeetingTypeID</th>
                <th>VenueID</th>
                <th>DepartmentID</th>
                <th>Status</th>
                <th colspan="3">Action</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 1; i <= 10; i++)
            {
                <tr>
                    <th>@i</th>
                    <td>15-12-2025</td>
                    <td>1</td>
                    <td>2</td>
                    <td>3</td>
                    <td><span class="badge bg-success">Scheduled</span></td>
                    <td><a asp-action="MeetingsView"><i class="bi bi-eye"></i></a></td>
                    <td><a asp-action="MeetingsEditForm"><i class="bi bi-pen"></i></a></td>
                    <td><a asp-action="MeetingsDeleteForm"><i class="bi bi-trash text-danger"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
